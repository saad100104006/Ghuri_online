<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:shadow="http://schemas.android.com/tools"
    android:id="@+id/cardlist_item"
    style="@style/CardView.Dark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@drawable/shadow"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="10dp"
    card_view:cardUseCompatPadding="true"


    >


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="#cc837f7f"



        >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />



        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_alignParentTop="@+id/img1"
            android:background="@drawable/up_shadow"></View>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_alignBottom="@+id/img1"
            android:background="@drawable/drop_shadow"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img1"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"


            >


            <TextView

                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="HOTEL THE COX TODAY"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"


                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginLeft="10dp"
                android:text="From/Per Night"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:textStyle="bold"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:gravity="right|bottom"
            android:orientation="vertical"
            android:layout_marginRight="10dp"


            >




            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/text3"
                android:gravity="right"
                android:text="BDT 30000"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"

                />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>